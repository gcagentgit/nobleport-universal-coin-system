# Nobleport Universal Coin Purchase System - Environment Configuration

# Database Configuration
DB_HOST=localhost
DB_USER=your_username
DB_PASSWORD=your_password
DB_NAME=nobleport_coins
DB_PORT=3306

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Crypto Configuration
INFURA_PROJECT_ID=your_infura_project_id
ETHEREUM_NETWORK=mainnet  # or 'goerli' for testnet
USDC_CONTRACT=0xA0b86991c6218b36c1d19D4a2e9Eb0cE3606eB48
USDT_CONTRACT=0xdAC17F958D2ee523a2206206994597C13D831ec7

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here_change_this
JWT_EXPIRATION=24h

# Server Configuration
PORT=3000
NODE_ENV=development  # or 'production'
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Payment Configuration
MIN_PURCHASE_AMOUNT=0.31  # USD
MAX_PURCHASE_AMOUNT=10000  # USD

# Referral System
REFERRAL_BONUS_PERCENT=5
REFERRAL_MIN_PURCHASE=3.65  # USD

# Cashback Configuration
CASHBACK_ENABLED=true
CASHBACK_MAX_AMOUNT=250  # USD
CASHBACK_TIER_1=10  # 1% for $10+
CASHBACK_TIER_2=50  # 2% for $50+
CASHBACK_TIER_3=100  # 3% for $100+

# Monitoring & Logging
LOG_LEVEL=info  # debug, info, warn, error
ENABLE_TRANSACTION_LOGS=true

# Webhook URLs
STRIPE_WEBHOOK_URL=https://yourdomain.com/api/coins/webhook

# Admin Configuration
ADMIN_EMAIL=admin@nobleport.com
SUPPORT_EMAIL=support@nobleport.com

# Production URLs
FRONTEND_URL=https://yourdomain.com
API_URL=https://api.yourdomain.com
